<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dongtai">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/grey">

            <LinearLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/corner">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/headimg"
                        android:layout_marginTop="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/thussbuilding"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/publisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="Tanyifan"
                            android:textSize="22dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:textColor="@color/font_blue"/>

                        <TextView
                            android:id="@+id/ifguanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未关注"
                            android:gravity="center"
                            android:layout_gravity="center"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/msyh"
                        android:text="time"
                        android:layout_marginLeft="3dp"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="# 主楼游记"
                        android:textColor="@color/font_blue"
                        android:layout_marginLeft="3dp"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="今天去东主楼玩啦！"
                        android:textColor="@color/black"
                        android:layout_marginLeft="3dp"
                        android:textSize="18dp"/>

                    <GridLayout
                        android:id="@+id/contentimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_height="100dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:src="@drawable/thussbuilding"/>
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_height="100dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:src="@drawable/thussbuilding"/>
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_height="100dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:src="@drawable/thussbuilding"/>
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_height="100dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:src="@drawable/thussbuilding"/>
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_height="100dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:src="@drawable/thussbuilding"/>

                    </GridLayout>

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校园资讯"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="position"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/corner2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/comment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="7dp"
                                android:text="评论(1)"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:textColor="#666666"
                                android:background="#E8E8E8"
                                android:clickable="true"/>
                            <TextView
                                android:id="@+id/like"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="7dp"
                                android:text="赞(100)"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:textColor="#666666"
                                android:background="#E8E8E8"/>
                            <TextView
                                android:id="@+id/collect"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="7dp"
                                android:text="收藏(9)"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:textColor="#666666"
                                android:background="#E8E8E8"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/borderview"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            android:layout_marginVertical="1dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/comment_items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textSize="20dp"
                    android:background="@drawable/corner"
                    android:layout_marginRight="20dp"
                    android:onClick="BackToMain"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textSize="20dp"
                    android:background="@drawable/corner"
                    android:layout_marginLeft="20dp"
                    android:onClick="shareDongTai"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>